<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.richard.nativeandroidopencv">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Iris Recognition"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ImageViewActivity"
                  android:label="ImageViewScreen"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".CameraAuthenticateActivity"
                  android:label="CameraViewAuthenticateScreen"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".MatchResultActivity"
                  android:label="MatchResultScreen"
                  android:theme="@style/AppTheme"/>

    </application>

</manifest>